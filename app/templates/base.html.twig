<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}
				{{ 'admin.hello'|trans({'name':app.user.username}) }}
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<div class="mb-3">
			<a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'ru'})) }}">ru</a>
			<a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'de'})) }}">de</a>
			<a href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}">en</a>
		</div>
		{% if app.user %}
			<div class="mb-3">
				{{ 'hello'|trans({'name':app.user.username}) }}
				<a href="{{ path('app_logout') }}">{{ 'logout'|trans }}</a>
			</div>
		{% endif %}
		<br>
		{% block body %}{% endblock %}
	</body>
</html>
