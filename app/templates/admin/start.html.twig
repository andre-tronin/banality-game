{% extends 'admin/index.html.twig' %}
{% block content %}
	<div>
		<input type="text" value="{{ url('user', {'game_id': game.id}) }}">
		<button data-controller="clipboard">{{ 'admin.copy_to_clipboard'|trans }}</button>
	</div>
	<div class="alert alert-warning">
		{{ 'admin.start.warning'|trans }}
	</div>
	<form method="post">
		<input type="hidden" name="start"><br>
		<input type="submit" value="{{ 'admin.start_game'|trans }}">
	</form>
{% endblock %}
